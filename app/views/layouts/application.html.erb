<html <%= %{manifest="/manifest"} if logged_in? %>>
  <head>
    <title>Break Glass</title>
    <link href="<%=root_url%>stylesheets/breakglass.css" media="all" rel="stylesheet" type="text/css" />
    <script src="<%=root_url%>javascripts/jquery.js" type="text/javascript"></script>
    <script src="<%=root_url%>javascripts/jquery-ui.js" type="text/javascript"></script>
    <script src="<%=root_url%>javascripts/jrails.js" type="text/javascript"></script>
    <script src="<%=root_url%>javascripts/application.js" type="text/javascript"></script>
  </head>
  <body>
    <% if flash[:notice] -%><div class="flash notice"><%= flash[:notice] %></div><% end -%>
    <% if flash[:error] -%><div class="flash error"><%= flash[:error] %></div><% end -%>

    <div class="header">
      <% if logged_in? -%>
        <div>
          Logged in as <%=current_person.name%> |
          <%= link_to "log out", session_url, :method => :delete -%>
        </div>
      <% end -%>
    </div>
    <%= yield %>
  </body>
</html>