<% person ||= Person.new %>
<% remote_form_for :person, person, :url => family_people_url(current_family), :method => :post, :html => {:id => 'new-person'} do |f| -%>
  <%= f.error_messages %>
  <div class="field name">name: <%= f.text_field :name -%></div>
  <div class="field phone">phone: <%= f.text_field :phone -%></div>
  <div class="field sms">sms: <%= f.text_field :sms -%></div>
  <div class="field email">email: <%= f.text_field :email -%></div>
  <div class="field submit"><%= f.submit 'Add' -%></div>
<% end -%>
